# EditorConfig for Still Moment Android
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
ktlint_code_style = android_studio
max_line_length = 120

# Trailing commas: disabled (Kotlin style guide says optional, causes churn)
ktlint_standard_trailing-comma-on-call-site = disabled
ktlint_standard_trailing-comma-on-declaration-site = disabled

# Allow underscore prefix for backing properties (_state pattern in Flow/StateFlow)
ktlint_standard_property-naming = disabled

# Allow PascalCase function names (Compose convention: @Composable fun TimerScreen())
# Also allows backtick names in tests (`should do X`())
ktlint_standard_function-naming = disabled

[*Test.kt]
# Allow wildcard imports in tests (common for JUnit, assertions)
ktlint_standard_no-wildcard-imports = disabled
# Allow inline comments in test data (e.g., duration = 1_200_000L, // 20 min)
ktlint_standard_discouraged-comment-location = disabled

[*Tests.kt]
ktlint_standard_no-wildcard-imports = disabled
ktlint_standard_discouraged-comment-location = disabled

[**/test/**/*.kt]
ktlint_standard_no-wildcard-imports = disabled
ktlint_standard_discouraged-comment-location = disabled

[**/androidTest/**/*.kt]
ktlint_standard_no-wildcard-imports = disabled
ktlint_standard_discouraged-comment-location = disabled

[*.md]
trim_trailing_whitespace = false
